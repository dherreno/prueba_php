pipeline{
  agent any
  
      parameters{
      string(name: 'container_name', dafaultValue: 'prueba hola', description: 'proyecto php')
      string(name: 'image_name', dafaultValue: 'hello-php', description: 'hello-php')
      string(name: 'tag_image', defaultValue: 'hello-php', description: 'hello-php')
      string(name: 'container_port', defaultValue: 80, description: 'Puerto que usa el contenedor')
      }
      
      stages{
        stage('install'){
          steps {
            git branch: 'main', url: 'https://github.com/dherreno/prueba_php.git'
                      
				}
						}
        stage('test'){
          steps {
			bat 'docker run -p 5000:80 -d -v D:\\Usuarios\\analista.tic3\\Desktop\\docker-php/src:/var/www/html/  hello-php'
				}
					}
      
			}
		}
